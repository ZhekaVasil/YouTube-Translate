    <script>
        function toggleToolsBar() {
            var bt_wrapper = document.getElementsByClassName('bt_wrapper')[0];
            if(bt_wrapper.style.bottom == '-40px'){
                bt_wrapper.style.bottom = '0';
            } else {
                bt_wrapper.style.bottom = '-40px';
            }
        };
    </script>
<script>
    //hiden input url
    var hiddenUrl = document.getElementById('hiddenUrl');
    hiddenUrl.value = window.location.href;


    var controller_json = '{{ json }}';
    controller_json = controller_json.replace(/&quot;/g, '"');
    controller_json = controller_json.replace(/(?:\r\n|\r|\n)/g, '');
    var $_GET  = JSON.parse(controller_json);
    var newTag = document.createElement('script');
    if ($_GET.audurl == 'true') {
        try {
            /* var audioCtx = new (window.AudioContext || window.webkitAudioContext)();
             newTag.setAttribute('src', 'scripts/watch.webAudio.js');
             document.body.appendChild(newTag);*/
            newTag.setAttribute('src', '{{ asset('scripts/watch.audioTag_and_audio.js') }}');
            document.body.appendChild(newTag);
        } catch (e) {
            newTag.setAttribute('src', 'scripts/watch.audioTag_and_audio.js');
            document.body.appendChild(newTag);
        }
    } else {
        try {
            /* var audioCtx = new (window.AudioContext || window.webkitAudioContext)();
             newTag.setAttribute('src', 'scripts/watch.webAudio.js');
             document.body.appendChild(newTag);*/
            newTag.setAttribute('src', 'scripts/watch.audioTag.js');
            document.body.appendChild(newTag);
        } catch (e) {
            newTag.setAttribute('src', 'scripts/watch.audioTag.js');
            document.body.appendChild(newTag);
        }
    }

    // A U T H  F O R M
    var nav_auth = document.getElementById('nav_auth');
    var drawer_auth = document.getElementById('drawer_auth');
    var authFormWrapper = document.getElementById('authFormWrapper');
    var authCancelBtn = document.getElementById('authCancelBtn');
    var authForm = document.forms.authForm;
    {% if admin == false %}
    nav_auth.onclick = showForm;
    drawer_auth.onclick = showForm;
    {% endif %}
    authCancelBtn.onclick = hideForm;
    function showForm(e) {
        e.preventDefault();
        authFormWrapper.classList.add('show');
        authForm.removeAttribute('novalidate');
        window.addEventListener('click', addListenerOnWindow)
    }
    function hideForm(e, wrapperId) {
        e ? e.preventDefault() : false;

        window.removeEventListener('click', addListenerOnWindow);
        if(wrapperId){
            wrapperId.classList.remove('show');
            document.querySelector('#' + wrapperId.id + ' form').setAttribute('novalidate', '');
            return;
        }
            authFormWrapper.classList.remove('show');
            authForm.setAttribute('novalidate', '');
    }

    function addListenerOnWindow(ev) {
        if(ev.target.className.indexOf('show')>0){
            hideForm(false, ev.target)
        }
    }
</script>
{% endblock %}
