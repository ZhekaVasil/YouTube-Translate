{% extends "baseadmin.html.twig" %}
{% block body %}

    <!-- NAVIGATION MENU -->
    <div class="navbar-nav navbar-inverse navbar-fixed-top" style="margin: 0">
        <div class="container">
            <div class="navbar-header" style="margin: 0">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('index') }}" style="padding: 10px 35px 0px 0px;"><img src="{{  asset('img/yr_logo.png') }}" alt="" style="width: 150px;height: 33px;"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/administrator"><i class="icon-home icon-white"></i>Модерация</a></li>
                    <li><a href=/administrator/top><i class="icon-th icon-white"></i>Выбор редакции</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <div class="container">

        <!-- FIRST ROW OF BLOCKS -->
        <div class="row">

            <!-- USER PROFILE BLOCK -->
            <div class="col-sm-3 col-lg-3">
                <div class="dash-unit">
                    <dtitle>Модератор</dtitle>
                    <hr>
                    <div class="thumbnail">
                        <img src="images/admin.png" alt="Marcel Newman" class="img-circle" style="width: 151px">
                    </div><!-- /thumbnail -->
                    <h1>Admin</h1>
                    <h3>Zheka, Vasil</h3>
                </div>
            </div>

            <!-- DONUT CHART BLOCK -->
            <div class="col-sm-3 col-lg-3">
                <div class="dash-unit">
                    <dtitle>Видео на модерации</dtitle>
                    <hr>
                    <div id="load" style="display: none"></div>
                    <h2 style="font-size: 207px">{{ countModerate }}</h2>
                </div>
            </div>

            <!-- DONUT CHART BLOCK -->
            <div class="col-sm-3 col-lg-3">
                <div class="dash-unit">
                    <dtitle>Видео на сайте</dtitle>
                    <hr>
                    <div id="space" style="display: none"></div>
                    <h2 style="font-size: 207px">{{ countVid }}</h2>
                </div>
            </div>

            <div class="col-sm-3 col-lg-3">

                <!-- LOCAL TIME BLOCK -->
                <div class="half-unit">
                    <dtitle>Время</dtitle>
                    <hr>
                    <div class="clockcenter">
                        <digiclock id="showTime" style="font-size: 43px"></digiclock>
                    </div>
                </div>

                <!-- SERVER UPTIME -->
                <div class="half-unit">
                    <dtitle>Дата</dtitle>
                    <hr>
                    <div class="cont" style="margin: 0">
                        <div id="showDate" style="font-size: 37px"></div>
                    </div>
                </div>

            </div>
        </div><!-- /row -->


        <!-- FIRST ROW OF BLOCKS -->
        <div class="row vids">

            <!-- USER PROFILE BLOCK -->
            <!-- DONUT CHART BLOCK -->
            {% for var in res %}
            <div class="col-sm-6 col-lg-6">

                <div class="dash-unit" style="position: relative">
                    <a href="{{ file_watch_php }}?idvid={{ var['idvid'] }}&audurl={{ var['audurl'] }}&m=true&id={{ var['#'] }}" style="background-image: url({{ var['thumbnail'] }})">
                    </a>
                        <h2 class="" style="font-size: 15px;" title="{{ var['title'] }}">{{ var['title'] }}</h2>

                            <form action="/administrator" method="post" style="position: absolute; bottom: 10px; left: 0; right: 0;">
                                <label class="btn btn-success" style="margin-right: 10px">Добавить<input type="submit" name="public"  value="{{ var['#'] }}" style="display: none"></label>
                                <label class="btn btn-danger">Удалить<input type="submit" name="delete"  value="{{ var['#'] }}" style="display: none"></label>
                            </form>

                    </div>
                </div>


            {% endfor %}


        </div><!-- /row -->
        </div>
{% endblock %}




{% block scripts %}{% endblock %}


