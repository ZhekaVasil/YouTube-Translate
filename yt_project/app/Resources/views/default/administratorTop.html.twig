{% block scripts %}
    <script src="{{ asset('js/dragula.min.js') }}"></script>
    <script>
        dragula([document.querySelector('#left'), document.querySelector('#right')], {
            removeOnSpill: true
        });
    </script>

    <script>
        var moreBtn = document.getElementById('expendButton');
        moreBtn.addEventListener("click", showMoreContent);
        var pageIndexTop = 12;
        function showMoreContent(){
            document.getElementById('spinner').style.display = 'inline-block';
            document.querySelector('#expendButton svg').style.display = 'none';
            var data = new FormData();
            data.append('pageIndexTop', pageIndexTop );
            var request = new XMLHttpRequest();
            request.responseType = 'json';
            request.addEventListener('load', addMoreContent);
            request.open("POST","../loadingByPices.php", true);
            request.send(data);



            pageIndexTop+=12;
        }
        function addMoreContent(e){
            var data = e.target;
            if (data.status == 200) {
                document.querySelector('#expendButton svg').style.display = 'inline';
                document.getElementById('spinner').style.display = 'none';
                if(data.response.length < 12) {moreBtn.remove();}
                var main = document.querySelector('#left');
                data.response.forEach(function (item) {
                    var div = document.createElement('div');
                    div.setAttribute('class', 'col-md-12');
                    div.setAttribute('style', "border-bottom: 12px solid #1f1f1f");
                    div.innerHTML = item;
                    main.appendChild(div);
                });

            }
        }

        function sendToTop() {
            var wrap = document.querySelectorAll('#right .wrap');
            var arr = [];
            wrap.forEach(function (item) {
                arr.push(item.getAttribute('data-id'));
            });
            var data = new FormData();
            var request = new XMLHttpRequest();
            request.open("POST","../loadingByPices.php", true);
            request.setRequestHeader("Content-type", "application/json");
            request.responseType = 'json';
            request.addEventListener('load', location.reload());
            request.send(JSON.stringify(arr));
        }

    </script>
